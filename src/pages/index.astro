---
import Header from '../components/Header.astro';
import ProductCard from '../components/ProductCard.astro';
import products from '../data/products.json';
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catálogo de Suéteres y Ensambles</title>
  </head>
  <body>
    <Header title="Catálogo de Suéteres y Ensambles" />
    <main>
		<main class="catalog">
			{products.map(product => (
			  <ProductCard {...product} />
			))}
    </main>
  </body>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background-color: #f9f9f9;
      color: #333;
    }
    header {
      background-color: #ff6b6b;
      color: white;
      text-align: center;
      padding: 20px;
    }
    .catalog {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      padding: 20px;
    }
  </style>
</html>
