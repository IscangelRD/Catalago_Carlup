---
// src/components/Header.astro
---
<nav class="header">
    <div class="container">
      <div class="logo">
        <img src="/images/logo2.png" alt="Logo Carlup" />
        <!--<img src="/images/logo.jpg" alt="Logo >Aleana"> ---Pruba de logos-->   
        <span class="span">Aleana&Carlup</span>
      </div>
      <button class="menu-toggle" id="menu-toggle" aria-label="Abrir menú">
        &#9776;
      </button>
      <ul class="menu" id="menu">
        <li><a href="/categorias/">Ensambles</a></li>
        <li><a href="/categorias/accesorios">Accesorios</a></li>
        <li><a href="/categorias/calzado">Calzado</a></li>
      </ul>
    </div>
  </nav>
  
  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('menu');
  
      menuToggle.addEventListener('click', () => {
        menu.classList.toggle('open');
      });
    });
  </script>
  
  <style>
    .header {
     background: linear-gradient(90deg, #2c3e50, #bdc3c7);
      border-bottom: 1px solid #ccc;
      padding: 1rem 0;
    }
  
    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .span{
        position: relative;
        left: 300px;
        font-family: Georgia, 'Times New Roman', Times, serif;
        font-size: xx-large;
    }
    .logo {
      display: flex;
      align-items: center;
    }

  
    .logo img {
      height: 100px;
      margin-right: 0.5rem;
    }
  
    .menu {
      list-style: none;
      display: flex;
      gap: 2rem;
      transition: transform 0.3s ease, opacity 0.3s ease;
    }
  
    .menu a {
      text-decoration: none;
      color: #333;
      font-weight: 600;
      transition: color 0.3s;
    }
  
    .menu a:hover {
      color: #0077ff;
    }
  
    /* Botón de Menú (Hamburguesa) */
    .menu-toggle {
      display: none;
      font-size: 1.5rem;
      background: none;
      border: none;
      cursor: pointer;
    }
  
    /* Responsivo */
    @media (max-width: 768px) {
      .menu {
        flex-direction: column;
        gap: 1rem;
        position: absolute;
        top: 60px;
        right: .5rem;
        background-color: #fff;
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 20px;
        transform: scale(0);
        opacity: 0;
        transform-origin: top right;
      }
  
      .menu.open {
        transform: scale(1);
        opacity: 4;
      }
  
      .menu-toggle {
        display: block;
      }
  
      .container {
        justify-content: space-between;
        position: relative;
      }

      .span{
        position: relative;
        left: 10px;
        font-size: large;
    }
    }
  </style>
  