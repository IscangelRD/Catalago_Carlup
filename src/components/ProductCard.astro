---
export interface Product {
  id: number;
  name: string;
  description: string;
  price: number;
  image: string;
}
const { id, name, description, price, image } = Astro.props;
---
<div class="product-card">
  <img src={image} alt={name} loading="lazy" />
  <h3>{name}</h3>
  <p>{description}</p>
  <p class="price">${price}</p>
</div>

<style>
  .product-card {
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 15px;
    text-align: center;
    background-color: white;
    max-width: 200px;
  }
  .product-card img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }
  .product-card .price {
    color: #ff6b6b;
    font-size: 1.2em;
    font-weight: bold;
  }
</style>
